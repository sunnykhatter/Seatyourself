

<div class= "name">

 <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
              	<% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.first_name%> </td>
                  <td><%= user.last_name%> </td>
                  <td><%= user.email %></td>
                </tr>
                <% end %>
              </tbody>
            </table>






</div




